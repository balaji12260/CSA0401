#include <stdio.h>

int main() {
    int n, i, time = 0, smallest, count = 0;
    int arrival_time[20], burst_time[20], remaining_time[20], priority[20];
    int waiting_time[20], turnaround_time[20];
    float avg_wait = 0, avg_tat = 0;
    int end;

    printf("Enter the number of processes: ");
    scanf("%d", &n);

    for (i = 0; i < n; i++) {
        printf("\nEnter Arrival Time for P%d: ", i + 1);
        scanf("%d", &arrival_time[i]);
        printf("Enter Burst Time for P%d: ", i + 1);
        scanf("%d", &burst_time[i]);
        printf("Enter Priority for P%d (lower number = higher priority): ", i + 1);
        scanf("%d", &priority[i]);
        remaining_time[i] = burst_time[i];
    }

    priority[19] = 9999; // Sentinel value for comparison

    printf("\nGantt Chart:\n");

    // Loop until all processes are finished
    for (time = 0; count != n; time++) {
        smallest = 19;
        for (i = 0; i < n; i++) {
            if (arrival_time[i] <= time && priority[i] < priority[smallest] && remaining_time[i] > 0) {
                smallest = i;
            }
        }

        remaining_time[smallest]--;

        printf("P%d ", smallest + 1);

        if (remaining_time[smallest] == 0) {
            count++;
            end = time + 1;
            waiting_time[smallest] = end - arrival_time[smallest] - burst_time[smallest];
            turnaround_time[smallest] = end - arrival_time[smallest];
            avg_wait += waiting_time[smallest];
            avg_tat += turnaround_time[smallest];
        }
    }

    printf("\n\n----------------------------------------------------------\n");
    printf("Process\tArrival\tBurst\tPriority\tWaiting\tTurnaround\n");
    printf("----------------------------------------------------------\n");

    for (i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t%d\t\t%d\t%d\n",
               i + 1, arrival_time[i], burst_time[i],
               priority[i], waiting_time[i], turnaround_time[i]);
    }

    printf("----------------------------------------------------------\n");
    printf("Average Waiting Time: %.2f\n", avg_wait / n);
    printf("Average Turnaround Time: %.2f\n", avg_tat / n);

    return 0;
}
