/*
 * Program: Multithreading using pthreads
 * File: multithread_demo.c
 *
 * Description:
 * Demonstrates creation and execution of multiple threads.
 *
 * Compile:
 *   gcc multithread_demo.c -o multithread_demo -lpthread
 *
 * Run:
 *   ./multithread_demo
 */

#include <stdio.h>
#include <stdlib.h>
#include <pthread.h>
#include <unistd.h>

// Function executed by each thread
void* print_message(void* arg) {
    char* message = (char*)arg;

    for (int i = 0; i < 5; i++) {
        printf("%s (iteration %d)\n", message, i + 1);
        sleep(1);  // simulate some work
    }

    pthread_exit(NULL);
}

int main() {
    pthread_t thread1, thread2;

    // Create two threads
    if (pthread_create(&thread1, NULL, print_message, "Thread 1 is running") != 0) {
        perror("Failed to create Thread 1");
        exit(1);
    }

    if (pthread_create(&thread2, NULL, print_message, "Thread 2 is running") != 0) {
        perror("Failed to create Thread 2");
        exit(1);
    }

    // Wait for both threads to finish
    pthread_join(thread1, NULL);
    pthread_join(thread2, NULL);

    printf("Both threads have finished execution.\n");

    return 0;
}
