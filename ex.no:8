#include <stdio.h>

int main() {
    int n, i, time = 0, remain, flag = 0, time_quantum;
    int wait_time = 0, turnaround_time = 0;
    int at[20], bt[20], rt[20]; // arrival, burst, remaining times

    printf("Enter Total Number of Processes: ");
    scanf("%d", &n);
    remain = n;

    for (i = 0; i < n; i++) {
        printf("\nEnter Arrival Time for Process P%d: ", i + 1);
        scanf("%d", &at[i]);
        printf("Enter Burst Time for Process P%d: ", i + 1);
        scanf("%d", &bt[i]);
        rt[i] = bt[i]; // Initialize remaining time
    }

    printf("\nEnter Time Quantum: ");
    scanf("%d", &time_quantum);

    printf("\nGantt Chart:\n");

    int i_index = 0;
    while (remain != 0) {
        flag = 0;
        for (i = 0; i < n; i++) {
            if (at[i] <= time && rt[i] > 0) {
                printf("P%d ", i + 1);

                if (rt[i] > time_quantum) {
                    time += time_quantum;
                    rt[i] -= time_quantum;
                } else {
                    time += rt[i];
                    wait_time += time - at[i] - bt[i];
                    turnaround_time += time - at[i];
                    rt[i] = 0;
                    remain--;
                }
                flag = 1;
            }
        }

        // If no process arrived yet, increment time
        if (flag == 0)
            time++;
    }

    printf("\n\nAverage Waiting Time: %.2f", (float)wait_time / n);
    printf("\nAverage Turnaround Time: %.2f\n", (float)turnaround_time / n);

    return 0;
}
