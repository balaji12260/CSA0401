#include <stdio.h>
#include <fcntl.h>      // for open()
#include <unistd.h>     // for read(), write(), close()
#include <stdlib.h>     // for exit()

int main() {
    int source_fd, dest_fd;
    char buffer[1024];
    ssize_t bytesRead;

    // Open the source file in read-only mode
    source_fd = open("input.txt", O_RDONLY);
    if (source_fd < 0) {
        perror("Error opening source file");
        exit(1);
    }

    // Open (or create) the destination file in write mode
    dest_fd = open("output.txt", O_WRONLY | O_CREAT | O_TRUNC, 0644);
    if (dest_fd < 0) {
        perror("Error opening destination file");
        close(source_fd);
        exit(1);
    }

    // Read from source and write to destination
    while ((bytesRead = read(source_fd, buffer, sizeof(buffer))) > 0) {
        if (write(dest_fd, buffer, bytesRead) != bytesRead) {
            perror("Error writing to destination file");
            close(source_fd);
            close(dest_fd);
            exit(1);
        }
    }

    if (bytesRead < 0)
        perror("Error reading from source file");

    // Close both files
    close(source_fd);
    close(dest_fd);

    printf("âœ… File copied successfully from input.txt to output.txt\n");
    return 0;
}
